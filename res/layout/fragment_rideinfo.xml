<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/rideinfo_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            style="?android:attr/textAppearanceLarge"
            />

        <TextView
            android:id="@+id/rideinfo_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            style="?android:attr/textAppearanceLarge"
            android:gravity="right"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_clock"
                android:scaleType="center"
                />

            <TextView
                android:id="@+id/rideinfo_time"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:textSize="35sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                style="?android:attr/textAppearanceLarge"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_ticket"
                android:scaleType="center"
                />

            <TextView
                android:id="@+id/rideinfo_price"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="35sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/prevoztheme_color"
                style="?android:attr/textAppearanceListItemSmall"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/rideinfo_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:drawableLeft="@drawable/ic_action_calendar_day"
            android:drawablePadding="8dp"

            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            style="?android:attr/textAppearanceMedium"
            />

        <FrameLayout
            android:id="@+id/rideinfo_load_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateOnly="true"
                android:layout_gravity="center"
                />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/rideinfo_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="1dp"
                android:background="#DDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_phone_start"
                    android:drawableLeft="@drawable/ic_action_phone_start"
                    android:scaleType="center"
                    />

                <TextView
                    android:id="@+id/rideinfo_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:includeFontPadding="false"

                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:textIsSelectable="true"
                    android:textColor="@android:color/black"
                    style="?android:attr/textAppearanceMedium"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_users"
                    android:drawableLeft="@drawable/ic_action_phone_start"
                    android:scaleType="center"
                    />

                <TextView
                    android:id="@+id/rideinfo_people"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:includeFontPadding="false"

                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    style="?android:attr/textAppearanceMedium"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/rideinfo_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="16dp"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:gravity="right"
                style="?android:attr/textAppearanceSmall"
                android:textColor="@color/prevoztheme_color"
                />


            <TextView
                android:id="@+id/rideinfo_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:textIsSelectable="true"
                android:textColor="@android:color/black"
                style="?android:attr/textAppearanceMedium"
                />

            <TextView
                android:id="@+id/rideinfo_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|right"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@android:color/darker_gray"
                android:textStyle="italic|bold"
                style="?android:attr/textAppearanceSmall"
                />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="1dp"
                android:background="#DDDDDD" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 >

                 <Button
                     android:id="@+id/rideinfo_button_call"
                     android:layout_width="0dp"
                     android:layout_height="48dp"
                     android:layout_weight="1"
                     android:textColor="@color/prevoztheme_color"
                     android:background="@drawable/borderless_button"
                     style="?android:textAppearanceButton"

                     android:text="@string/rideinfo_call"
                     />

                 <Button
                     android:id="@+id/rideinfo_button_sms"
                     android:layout_width="0dp"
                     android:layout_height="48dp"
                     android:layout_weight="1"
                     android:textColor="@color/prevoztheme_color"
                     android:background="@drawable/borderless_button"
                     style="?android:textAppearanceButton"

                     android:text="@string/rideinfo_send_sms"
                     />

             </LinearLayout>

         </LinearLayout>

    </LinearLayout>

</ScrollView>