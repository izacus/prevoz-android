<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/rideinfo_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:textSize="24sp"
        style="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:id="@+id/rideinfo_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:textSize="24sp"
        style="?android:attr/textAppearanceLarge"
        android:gravity="right"
        />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_clock"
            android:scaleType="center"
            />

        <TextView
            android:id="@+id/rideinfo_time"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:textSize="35sp"
            android:gravity="center"
            style="?android:attr/textAppearanceLarge"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_ticket"
            android:scaleType="center"
            />

        <TextView
            android:id="@+id/rideinfo_price"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/prevoztheme_color"
            style="?android:attr/textAppearanceListItemSmall"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/rideinfo_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"

        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_action_calendar_day"
        android:drawablePadding="8dp"

        style="?android:attr/textAppearanceMedium"
        />

</LinearLayout>