<?xml version="1.0" encoding="utf-8"?>
<ScrollView
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width = "fill_parent"
   android:layout_height = "fill_parent"
   >
	<LinearLayout
	  android:layout_width = "fill_parent"
	  android:layout_height = "fill_parent"
	  android:orientation = "vertical"
	  android:id = "@+id/searchTab"
	  style="@style/ViewStyle">
   
     <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "@string/im_searching"
       android:layout_marginBottom = "3dip"
       style="@style/ListHeaderStyle"
       />
   
     <Spinner
      android:id = "@+id/search_type"
      android:layout_width = "fill_parent"
      android:layout_height = "wrap_content"
      android:layout_margin = "8dip" />
	  
	  <TextView
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:text = "Kam?"
	    android:layout_marginBottom = "3dip"
	    style="@style/ListHeaderStyle"
	    />
	  
	  <RelativeLayout
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    >
	    
	     <ImageButton
	       android:id = "@+id/gps_from"
	       android:layout_width = "wrap_content"
	       android:layout_height = "wrap_content"
	       android:layout_alignParentRight = "true"
	       android:layout_marginRight = "8dip"
	       android:scaleType = "center"
	       android:src = "@drawable/gps_button"
	       />
	  
		  <AutoCompleteTextView 
		    android:id = "@+id/fromField"
		    android:layout_toLeftOf = "@id/gps_from"
		    android:layout_width = "fill_parent"
		    android:layout_height = "wrap_content"
		    android:inputType = "textCapWords"
		    android:hint = "@string/origin"
		    style = "@style/PaddedBox"
		    />
	   
	   </RelativeLayout>
	   
	   <RelativeLayout
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       >
       
        <ImageButton
          android:id = "@+id/gps_to"
          android:layout_width = "wrap_content"
          android:layout_height = "wrap_content"
          android:layout_alignParentRight = "true"
          android:layout_marginRight = "8dip"
          android:scaleType = "center"
          android:src = "@drawable/gps_button"
          />
     
        <AutoCompleteTextView 
          android:id = "@+id/toField"
          android:layout_toLeftOf = "@id/gps_to"
          android:layout_width = "fill_parent"
          android:layout_height = "wrap_content"
          android:inputType = "textCapWords"
          android:hint = "@string/destination"
          style = "@style/PaddedBox"
          />
      
      </RelativeLayout>
	  
	  <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "Kdaj?"
       android:layout_marginBottom = "3dip"
       style="@style/ListHeaderStyle"
       />
	
	   <EditText
	    android:id = "@+id/dateField"
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:editable = "false"
	    android:focusableInTouchMode = "false"
	    style="@style/PaddedBox"
	     />
	    
	   <Button
	    android:id = "@+id/doSearch"
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:layout_margin = "8dip"
	    android:text = "Najdi prevoze"
	    />
	</LinearLayout>
</ScrollView>