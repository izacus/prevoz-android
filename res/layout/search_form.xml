<?xml version="1.0" encoding="utf-8"?>
<ScrollView
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width = "fill_parent"
   android:layout_height = "fill_parent"
   >
	<LinearLayout
	  android:layout_width = "fill_parent"
	  android:layout_height = "fill_parent"
	  android:orientation = "vertical"
	  android:id = "@+id/searchTab"
	  style="@style/ViewStyle">
   
     <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "Iščem:"
       style="@style/MediumText"
       />
        <RadioGroup
          android:layout_height = "wrap_content"
          android:layout_width = "fill_parent"
          android:orientation = "horizontal"
          android:id = "@+id/search_type"
          >
			  <RadioButton
		       android:layout_width = "fill_parent"
		       android:layout_height = "wrap_content"
		       android:layout_weight = "1"
		       android:id = "@+id/shares" 
		       android:text = "prevoze" />
		
		     <RadioButton
		       android:layout_width = "fill_parent"
		       android:layout_height = "wrap_content"
		       android:layout_weight = "1"
		       android:id = "@+id/rides" 
		       android:text = "iskalce" />
	     </RadioGroup>
	  
	  <TextView
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:text = "Kraj odhoda:"
	    android:layout_marginBottom = "2dip"
	    style="@style/MediumText"
	    />
	  
	  <EditText 
	    android:id = "@+id/fromField"
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:inputType = "textCapWords"
	    android:hint = "Začetek"
	    android:layout_marginBottom = "2dip"
	    />
	    
	   <TextView
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:text = "Kraj prihoda:"
	    android:layout_marginTop = "2dip"
	    android:layout_marginBottom = "2dip" 
	    style="@style/MediumText" 
	    />
	    
	   <EditText
	    android:id = "@+id/toField"
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:inputType = "textCapWords"
	    android:hint = "Cilj" 
	    android:layout_marginBottom = "2dip"/>
	  
	   <TextView
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:text = "Kdaj:"
	    android:layout_marginTop = "2dip"
	    android:layout_marginBottom = "2dip" 
	    style="@style/MediumText"
	    />
	
	   <EditText
	    android:id = "@+id/dateField"
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:layout_marginBottom = "2dip"
	    android:editable = "false"
	    android:focusableInTouchMode = "false"
	     />
	    
	   <Button
	    android:id = "@+id/doSearch"
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:layout_marginTop = "4dip"
	    android:text = "Najdi prevoze"
	    />
	</LinearLayout>
</ScrollView>