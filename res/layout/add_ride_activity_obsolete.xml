<?xml version="1.0" encoding="utf-8"?>
<view
  xmlns:android="http://schemas.android.com/apk/res/android"
  class = "org.prevoz.android.FixedViewFlipper"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id = "@+id/add_flipper">
  
  <!-- Login webview -->
  
  <LinearLayout
   android:layout_width = "fill_parent"
   android:layout_height = "fill_parent"
   android:orientation = "vertical"
   android:gravity = "center_vertical|center_horizontal"
   >
  	<TextView
  		 android:id = "@+id/add_login_required_text"
  		 android:layout_width = "fill_parent"
         android:layout_height = "wrap_content"
         android:layout_margin = "10dip"
         android:layout_marginBottom = "15dip"         
         android:gravity = "center_horizontal"
         android:text = "@string/add_login_required"
         style = "@style/MediumText"
         />
         
  	<Button
  		 android:id = "@+id/add_login_button"
		 android:layout_width = "wrap_content"
         android:layout_height = "wrap_content"
         android:layout_marginTop = "15dip"
         android:paddingLeft = "20dip"
         android:paddingRight = "20dip"
         android:text = "Prijava"
        /> 	          
  </LinearLayout>
  
  <!-- Add ride form -->
  
  <include layout="@layout/add_form" />
  
  <!-- Preview  -->
  <LinearLayout
   android:layout_width = "fill_parent"
   android:layout_height = "fill_parent"
   android:orientation = "vertical"
   >
      <TextView
         android:layout_width = "fill_parent"
         android:layout_height = "wrap_content"
         android:text = "@string/preview"
         style = "@style/LargeText"
         />
         
      <include layout="@layout/ride_info" />
   </LinearLayout>
  
</view>
