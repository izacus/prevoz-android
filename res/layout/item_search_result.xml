<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:background="@drawable/card_bg_r4"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/item_result_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:textSize="28sp"
            android:gravity="center"
            android:includeFontPadding="false"
            style="?android:attr/textAppearanceLarge"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/item_result_driver"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:gravity="top|right"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                android:textSize="12sp"
                android:includeFontPadding="true"
                style="?android:attr/textAppearanceSmall"
                />

            <TextView
                android:id="@+id/item_result_price"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:textStyle="bold"
                android:gravity="bottom|right"
                android:textColor="@color/prevoztheme_color"
                android:includeFontPadding="false"
                android:textSize="14sp"
                style="?android:attr/textAppearanceListItemSmall"
                />

         </LinearLayout>

    </LinearLayout>
</FrameLayout>