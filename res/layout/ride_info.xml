<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation = "vertical">

  <ScrollView
      android:layout_width = "fill_parent"
      android:layout_height = "wrap_content"
      android:fillViewport = "true"
      android:layout_margin = "3dp" >

    <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height = "fill_parent"
        android:orientation = "vertical"
        style="@style/ViewStyle">
        
	    <!-- From location -->
	    <TextView
	        android:id = "@+id/rideinfo_from" 
	        android:layout_width = "fill_parent"
	        android:layout_height = "wrap_content"
	        style = "@style/RideInfoTitle" />
	
	    <!-- From location -->
	    <TextView
	        android:id = "@+id/rideinfo_to" 
	        android:layout_width = "fill_parent"
	        android:layout_height = "wrap_content"
	        style = "@style/RideInfoTitle" />
	        
	   <include layout = "@layout/separator" />     
	        
	   <!-- Time and date display -->     
	   <LinearLayout
	        android:layout_width = "fill_parent"
	        android:layout_height = "wrap_content"
	        android:orientation = "horizontal">
	        
	        <TextView
	            android:id = "@+id/rideinfo_time"
	            android:layout_width = "fill_parent"
	            android:layout_height = "fill_parent"
	            android:layout_weight = "1"
	            style = "@style/RideInfoClock"
	            />
	            
	       <LinearLayout
	            android:layout_width = "fill_parent"
	            android:layout_height = "fill_parent"
	            android:layout_weight = "1"
	            android:orientation = "vertical"
	            >     
		       <TextView
		           android:id = "@+id/rideinfo_day"
		           android:layout_width = "fill_parent"
		           android:layout_height = "fill_parent"
		           android:layout_weight = "1"
		           style="@style/RideInfoDay"
		           />
	           <TextView
	               android:id = "@+id/rideinfo_date"
	               android:layout_width = "fill_parent"
	               android:layout_height = "fill_parent"
	               android:layout_weight = "1"
	               style="@style/RideInfoDate"
	               />	       
	        </LinearLayout>
	   </LinearLayout>    
	  
	   <!-- Price and people display -->
	   <LinearLayout
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:orientation = "horizontal"
	    >
	        <LinearLayout
	            android:layout_width = "fill_parent"
	            android:layout_height = "fill_parent"
	            android:layout_weight = "1"
	            android:orientation = "vertical"
	            >
	            <TextView
		            android:id = "@+id/rideinfo_price"
		            android:layout_width = "fill_parent"
		            android:layout_height = "wrap_content"
		            style="@style/PricePplText"
		            />
	             <TextView
	                android:layout_width = "fill_parent"
	                android:layout_height = "wrap_content"
	                style="@style/PricePplTagText"
	                android:text = "@string/price"
	                />
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width = "fill_parent"
	            android:layout_height = "fill_parent"
	            android:layout_weight = "1"
	            android:orientation = "vertical"
	            >
	            <TextView
	                android:id = "@+id/rideinfo_people"
	                android:layout_width = "fill_parent"
	                android:layout_height = "wrap_content"
	                style="@style/PricePplText"
	                />
	             <TextView
	                android:id = "@+id/rideinfo_peopletag"
	                android:layout_width = "fill_parent"
	                android:layout_height = "wrap_content"
	                style="@style/PricePplTagText"
	                />
	        </LinearLayout>
	   </LinearLayout>
	   
	   <include layout = "@layout/separator" />
	   
	   <RelativeLayout
	     android:layout_width = "fill_parent"
	     android:layout_height = "wrap_content"
	     android:layout_margin = "8dip"
	     >
	   
	     <TextView
           android:id = "@+id/rideinfo_author" 
           android:layout_width = "wrap_content"
           android:layout_height = "fill_parent"
           android:layout_alignParentTop = "true"
           style="@style/DriverNameText" />
           
         <TextView
           android:id = "@+id/rideinfo_phone" 
           android:layout_width = "wrap_content"
           android:layout_height = "fill_parent"
           android:layout_below = "@id/rideinfo_author"
           android:layout_centerVertical = "true"
           style="@style/PhoneNumberText"
           />
	     
	      <Button
           android:id = "@+id/rideinfo_sms"
           android:layout_width = "wrap_content"
           android:layout_height = "fill_parent"
           android:layout_alignParentRight = "true"
           android:layout_alignParentTop = "true"
           android:text = "Pošlji SMS"
           />
	     
	      <Button
	        android:id = "@+id/rideinfo_call"
	        android:layout_width = "wrap_content"
	        android:layout_height = "fill_parent"
	        android:layout_toLeftOf = "@id/rideinfo_sms"
	        android:layout_alignParentTop = "true"
	        android:text = "Pokliči"
	        />
	     
	   </RelativeLayout>
	  
	   <include layout = "@layout/separator" />
	  
	   <TextView 
	    android:id = "@+id/rideinfo_comment"
	    android:layout_width = "fill_parent"
	    android:layout_height = "wrap_content"
	    android:layout_margin = "8dip"
	    />
	   
   </LinearLayout>
  </ScrollView>   
</LinearLayout>
