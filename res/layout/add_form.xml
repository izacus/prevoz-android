<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <LinearLayout
   android:layout_width = "fill_parent"
   android:layout_height = "fill_parent"
   android:orientation = "vertical"
   style="@style/ViewStyle">
     <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "@string/add_offering"
       style="@style/MediumText"
       />
      
     <RadioGroup
          android:layout_height = "wrap_content"
          android:layout_width = "fill_parent"
          android:orientation = "horizontal"
          android:id = "@+id/add_type"
          >
           <RadioButton
             android:layout_width = "fill_parent"
             android:layout_height = "wrap_content"
             android:layout_weight = "1"
             android:id = "@+id/add_share" 
             android:text = "prevoze" />
      
           <RadioButton
             android:layout_width = "fill_parent"
             android:layout_height = "wrap_content"
             android:layout_weight = "1"
             android:id = "@+id/add_ride" 
             android:text = "iskalce" />
        </RadioGroup>
      
     <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "Kam?"
       android:layout_marginBottom = "2dip"
       android:padding = "-8dip"
       style="@style/ListHeaderStyle"
       />
     
     <AutoCompleteTextView
       android:id = "@+id/add_from"
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:inputType = "textCapWords"
       android:layout_marginBottom = "2dip"
       android:hint = "@string/origin"
       android:textColor = "#000"
       />
     
     <AutoCompleteTextView
       android:id = "@+id/add_to"
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:inputType = "textCapWords"
       android:layout_marginBottom = "2dip"
       android:textColor = "#000"
       android:hint = "@string/destination"
       />
      
      <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "Kdaj?"
       android:layout_marginBottom = "2dip"
       style="@style/ListHeaderStyle"
       />
   
      <EditText
       android:id = "@+id/add_date"
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:layout_marginBottom = "2dip"
       android:editable = "false"
       android:focusableInTouchMode = "false"
        /> 
	       
      <EditText
       android:id = "@+id/add_time"
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:layout_marginBottom = "2dip"
       android:editable = "false"
       android:focusableInTouchMode = "false"
        />
      
      <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "Kdo?"
       android:layout_marginBottom = "2dip"
       style="@style/ListHeaderStyle"
       />
      
      <LinearLayout
       android:layout_height = "wrap_content"
       android:layout_width = "fill_parent"
       android:orientation = "horizontal"
       android:layout_marginTop = "2dip"
       android:layout_marginBottom = "2dip"
       >
         <EditText
          android:id = "@+id/add_price"
          android:layout_width = "fill_parent"
          android:layout_height = "wrap_content"
          android:layout_weight = "1"
          android:layout_marginBottom = "2dip"
          android:inputType = "phone"
          android:hint = "@string/add_price"
           />       
       
         <Spinner
          android:id = "@+id/add_ppl"
          android:layout_width = "fill_parent"
          android:layout_height = "wrap_content"
          android:layout_weight = "1"
          android:prompt = "@string/add_num_ppl"
          android:layout_marginBottom = "2dip"/> 
          
      </LinearLayout>
      
     <EditText
      android:id = "@+id/add_phone"
      android:layout_width = "fill_parent"
      android:layout_height = "wrap_content"
      android:layout_marginBottom = "2dip"
      android:inputType = "phone"
      android:hint = "@string/add_phone"
       />
     
      
     <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "@string/add_comment"
       android:layout_marginBottom = "2dip"
       style="@style/ListHeaderStyle"
       />
      
      <EditText
          android:id = "@+id/add_comment"
          android:layout_width = "fill_parent"
          android:layout_height = "wrap_content"
          android:layout_marginBottom = "2dip"
          android:lines = "4"
          android:inputType = "textMultiLine"
          android:gravity = "top"
          />
          
      <Button
         android:id = "@+id/add_button"
         android:layout_width = "fill_parent"
         android:layout_height = "wrap_content"
         android:text = "@string/add_button"
         />
      
   </LinearLayout>
</ScrollView>
