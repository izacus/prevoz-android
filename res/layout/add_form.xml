<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <LinearLayout
   android:layout_width = "fill_parent"
   android:layout_height = "fill_parent"
   android:orientation = "vertical"
   style="@style/ViewStyle">
      
     <Spinner
       android:id="@+id/add_type"
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:layout_margin = "8dip"
       /> 
      
     <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "Kam?"
       style="@style/ListHeaderStyle"
       />
     
     <RelativeLayout
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       >
       
        <ImageButton
          android:id = "@+id/add_gps_from"
          android:layout_width = "wrap_content"
          android:layout_height = "wrap_content"
          android:layout_alignParentRight = "true"
          android:layout_marginRight = "8dip"
          android:scaleType = "center" />
<!--           android:src = "@drawable/gps_button"
          />  -->
     
        <AutoCompleteTextView 
          android:id = "@+id/add_from"
          android:layout_toLeftOf = "@id/add_gps_from"
          android:layout_width = "fill_parent"
          android:layout_height = "wrap_content"
          android:inputType = "textCapWords"
          android:hint = "@string/origin"
          style = "@style/PaddedBox"
          />
      
      </RelativeLayout>
     
      <RelativeLayout
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       >
       
        <ImageButton
          android:id = "@+id/add_gps_to"
          android:layout_width = "wrap_content"
          android:layout_height = "wrap_content"
          android:layout_alignParentRight = "true"
          android:layout_marginRight = "8dip"
          android:scaleType = "center" />
<!--      android:src = "@drawable/gps_button"  -->
          
     
        <AutoCompleteTextView 
          android:id = "@+id/add_to"
          android:layout_toLeftOf = "@id/add_gps_to"
          android:layout_width = "fill_parent"
          android:layout_height = "wrap_content"
          android:inputType = "textCapWords"
          android:hint = "@string/destination"
          style = "@style/PaddedBox"
          />
      
      </RelativeLayout>
      <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "Kdaj?"
       android:layout_marginBottom = "2dip"
       style="@style/ListHeaderStyle"
       />
   
      <EditText
       android:id = "@+id/add_date"
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:layout_marginBottom = "2dip"
       android:editable = "false"
       android:focusableInTouchMode = "false"
       style = "@style/PaddedBox"
        /> 
	       
      <EditText
       android:id = "@+id/add_time"
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:layout_marginBottom = "2dip"
       android:editable = "false"
       android:focusableInTouchMode = "false"
       style = "@style/PaddedBox"
        />
      
      <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "Kdo?"
       android:layout_marginBottom = "2dip"
       style="@style/ListHeaderStyle"
       />
      
      
      <RelativeLayout
       android:layout_height = "wrap_content"
       android:layout_width = "fill_parent"
       android:orientation = "horizontal"
       android:layout_marginTop = "2dip"
       android:layout_marginBottom = "2dip"
       >
       
         <Spinner
          android:id = "@+id/add_ppl"
          android:layout_width = "wrap_content"
          android:layout_height = "wrap_content"
          android:layout_alignParentRight = "true"
          android:prompt = "@string/add_num_ppl"
          android:layout_marginRight = "8dip"
          />
          
         <EditText
          android:id = "@+id/add_price"
          android:layout_width = "fill_parent"
          android:layout_height = "wrap_content"
          android:layout_alignBottom = "@id/add_ppl"
          android:layout_toLeftOf = "@id/add_ppl"
          android:layout_marginBottom = "-2dip"
          android:inputType = "phone"
          android:hint = "@string/add_price"
          style = "@style/PaddedBox"
           />           
     </RelativeLayout>
      
     <EditText
      android:id = "@+id/add_phone"
      android:layout_width = "fill_parent"
      android:layout_height = "wrap_content"
      android:layout_marginBottom = "2dip"
      android:inputType = "phone"
      android:hint = "@string/add_phone"
      style = "@style/PaddedBox"
       />
     
      
     <TextView
       android:layout_width = "fill_parent"
       android:layout_height = "wrap_content"
       android:text = "@string/add_comment"
       android:layout_marginBottom = "2dip"
       style="@style/ListHeaderStyle"
       />
      
      <EditText
          android:id = "@+id/add_comment"
          android:layout_width = "fill_parent"
          android:layout_height = "wrap_content"
          android:layout_marginBottom = "2dip"
          android:lines = "4"
          android:inputType = "textCapSentences"
          android:gravity = "top"
          style = "@style/PaddedBox"
          />
          
      <Button
         android:id = "@+id/add_button"
         android:layout_width = "fill_parent"
         android:layout_height = "wrap_content"
         android:text = "@string/add_button"
         android:layout_margin = "8dip"
         />
      
   </LinearLayout>
</ScrollView>
