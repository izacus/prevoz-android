<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
	<RelativeLayout 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:paddingLeft="15dp"
		android:paddingRight="15dp">
		
		<TextView
	    	android:id = "@+id/from_label"
	    	android:layout_width = "60dip"
	    	android:layout_height = "wrap_content"
	    	android:layout_alignParentLeft="true"
	    	
	    	android:text = "@string/search_label_from"
	    	style = "@style/land_field_labels"
	    	/>
   
    	
	    <Button
	    	android:id = "@+id/from_button"
	    	android:layout_width = "fill_parent"
	    	android:layout_height = "wrap_content"
	    	android:layout_toRightOf = "@id/from_label"
	    	android:layout_alignBaseline="@id/from_label"
	    	android:layout_alignParentTop="true"
	    	
	    	android:layout_marginTop = "5dip"
	    	
	    	android:background = "@drawable/button_white"
	    	style = "@style/button_white"
	    	/>
	    	
	    	
	     <TextView
	    	android:id = "@+id/to_label"
	    	android:layout_width = "60dip"
	    	android:layout_height = "wrap_content"
	    	android:layout_below = "@id/from_button"
	    	
	    	android:text = "@string/search_label_to"
	    	style = "@style/land_field_labels"
	    	/>
    	
	    <Button
	    	android:id = "@+id/to_button"
	    	android:layout_width = "fill_parent"
	    	android:layout_height = "wrap_content"
	    	android:layout_toRightOf = "@id/to_label"
	    	android:layout_alignBaseline="@id/to_label"
	    	
	    	android:background = "@drawable/button_white"
	    	style = "@style/button_white"
	    	/>
    	
	     <TextView
	    	android:id = "@+id/date_label"
	    	android:layout_width = "fill_parent"
	    	android:layout_height = "wrap_content"	    	
	    	android:layout_below = "@id/to_label"
	    	android:gravity="left"
	    	android:text = "@string/add_datetime"
	    	style = "@style/land_field_labels"
	    	/>
	    
	    <LinearLayout
	       android:id = "@+id/datetime_buttons"
	       android:layout_width="fill_parent"
	       android:layout_height = "wrap_content"
	       android:layout_below="@id/date_label"
	       android:layout_marginTop="5dip"
	       android:layout_marginLeft="2dip"
	       android:orientation="horizontal"
	       >	
		    <Button
		    	android:id = "@+id/date_button"
		    	android:layout_height = "wrap_content"
		    	android:layout_width = "fill_parent"
		    	android:layout_weight="1"
		        
		        android:layout_marginRight="3dip"
		   
		    	android:background = "@drawable/button_white"
		    	style = "@style/button_white"
		    	/>
		    	
		    <Button
		    	android:id = "@+id/time_button"
		    	android:layout_height = "wrap_content"
		    	android:layout_width = "fill_parent"
		    	android:layout_weight="2"
		    	android:layout_marginLeft="2dip"
		   
		    	android:background = "@drawable/button_white"
		    	style = "@style/button_white"
		    	/>
	    </LinearLayout>
	    <LinearLayout 
	    	android:id="@+id/price_ppl"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_below="@id/datetime_buttons"
	    	android:layout_marginTop="5dip"
	    	>
	    	
	    	<LinearLayout 
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	    		android:orientation="vertical"
	    		android:layout_weight="1"
	    	>
	    		<TextView
			    	android:id = "@+id/price_label"
			    	android:layout_width = "fill_parent"
			    	android:layout_height = "wrap_content"
			    	android:layout_alignParentTop="true"
			    	
			    	android:layout_marginTop = "5dip"
			    	android:layout_marginLeft = "2dip"
			    	
			    	android:text = "@string/add_price"
			    	style = "@style/field_labels"
			    	/>
			    	
			    <EditText
		            android:id = "@+id/add_price"
		            android:layout_width = "fill_parent"
		            android:layout_height = "fill_parent"
		            android:inputType = "numberDecimal"
		            android:imeOptions="flagNoEnterAction"
		            android:singleLine="true"
		            android:hint = "@string/add_price_hint"
		            android:layout_marginTop="5dip"
		           />     
	    	
	    	</LinearLayout>	
	    	
	    	<LinearLayout 
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	    		android:orientation="vertical"
	    		android:layout_weight="1"
	    	>
	    		<TextView
			    	android:id = "@+id/ppl_label"
			    	android:layout_width = "fill_parent"
			    	android:layout_height = "wrap_content"
			    	android:layout_alignParentTop="true"
			    	android:layout_marginTop = "5dip"
			    	android:layout_marginLeft = "2dip"
			    	
			    	android:text = "@string/add_num_ppl"
			    	style = "@style/field_labels"
			    	/>
	    	
	    	    <Spinner
			        android:id = "@+id/add_ppl"
			        android:layout_width = "fill_parent"
			        android:layout_height = "wrap_content"
			        android:prompt = "@string/add_num_ppl"
			        android:layout_marginTop="4dip"/>
	    	
	    	</LinearLayout>	
	    </LinearLayout>
	    
	    <CheckBox 
           android:id ="@+id/check_insurance"
           android:layout_height="wrap_content"
           android:layout_width="fill_parent"
           android:layout_below = "@id/price_ppl"
           
           android:paddingLeft="50dip"
           
           android:text="@string/add_insurance"
        />
	    
	    <TextView
            android:id = "@+id/phone_label"
            android:layout_width = "55dip"
            android:layout_height = "wrap_content"          
            android:layout_below = "@id/check_insurance"
            
            android:text = "@string/add_phone"
            style = "@style/land_field_labels"
            />
    
         <EditText 
            android:id="@+id/add_phone" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:inputType="phone" 
            android:layout_toRightOf="@id/phone_label"
            android:layout_alignBaseline="@id/phone_label"
            android:singleLine="true"
            android:hint="@string/add_phone">
        </EditText>
    	    
	    <EditText 
	    	android:id="@+id/add_comment" 
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" 
	    	android:inputType="textMultiLine|textCapSentences|textAutoCorrect|textAutoComplete" 
	    	android:layout_below="@id/phone_label"
	    	android:layout_marginTop="15dip"
	    	android:layout_alignParentLeft="true"
	    	android:singleLine="false"
	    	android:lines="3"
	    	android:hint="@string/add_comment"
	    	android:gravity="top">
	    </EditText>
		
		<Button
	    	android:id = "@+id/add_button"
	    	android:text = "@string/add_button"
	    	android:gravity = "center"
	    	android:layout_height = "wrap_content"
	    	android:layout_width = "fill_parent"
	    	android:layout_below="@id/add_comment"
	    	android:layout_marginBottom = "20dip"
	    	android:layout_marginTop = "10dip"    	
	    	android:background = "@drawable/button_black_rnd"
	    	android:layout_alignParentBottom = "true"
	    	style = "@style/button_black"
	    />
		
	</RelativeLayout>
</ScrollView>
