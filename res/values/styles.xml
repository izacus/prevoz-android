<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- Standard styles -->
	<style
		name = "field_labels">
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:textStyle">bold</item>
	</style>


	<style
		name = "button_white">		
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>
	
	<style
        name = "button_white_small">      
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

	<style
		name = "button_black">		
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/title_text</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>
	
	<style
		name = "button_black_small">		
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/title_text</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>
	
	<style
		name = "location_title">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="android:typeface">serif</item>
		<item name="android:gravity">center</item>
	</style>
    
    <style
        name = "PrevozTheme"
        parent = "@style/Theme.Sherlock.Light.DarkActionBar">
    </style>
    
    <!-- Colored titlebar -->
    <style name="title_text_style">
        <item
          name="android:shadowColor">#111111</item>
        <item
          name="android:shadowRadius">1</item>
        <item
          name="android:shadowDy">1</item>
    </style>
    
     <!-- Ride information styles -->
    <style name="RideInfoTitle" parent="@android:style/TextAppearance.Medium">
        <item
            name="android:gravity">center</item>    
    </style>
    
    <style name="RideInfoClock" parent="@android:style/TextAppearance.Large">
        <item
            name="android:gravity">center_horizontal</item>
        <item
            name="android:textSize">36dip</item>
    </style>
    
    <style name="RideInfoDay" parent="@android:style/TextAppearance.Small">
        <item
            name="android:gravity">bottom</item>
    </style>

    <style name="RideInfoDate" parent="@android:style/TextAppearance.Small">
        <item
            name="android:gravity">top</item>
    </style>
    
    <style name="PricePplText" parent="@android:style/TextAppearance.Large">
        <item
            name="android:gravity">center_horizontal</item>
        <item
            name="android:textSize">30dip</item>
        <item
            name="android:text">10.0</item>
    </style>
    
    <style name="PricePplTagText" parent="@android:style/TextAppearance.Small">
        <item
            name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="DriverNameText">
        <item
            name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>
    
    <style name="PhoneNumberText" parent="@android:style/TextAppearance.Medium">
    </style>
    
    <!-- Style for list headers -->
    <style
        name="list_header_style">
        <item 
          name="android:drawableBottom">@drawable/section_header</item>
        <item
          name="android:drawablePadding">4dp</item>
     	<item
     	  name="android:paddingLeft">4dp</item>
     	<item
     	  name="android:textAllCaps">true</item>
     	<item
     	  name="android:gravity">bottom</item>
     	<item
     	  name="android:textColor">@color/list_separator_color</item>
     	<item
     	  name="android:textSize">18sp</item>
    </style>
    <style name="land_field_labels" parent="@style/field_labels">
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">2dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_marginTop">20dip</item>
    </style>
</resources>
