<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Prevoz.Theme" parent="Prevoz.Theme.Base" />
    <style name="Prevoz.Theme.Base" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:actionBarStyle">@style/Prevoz.ActionBar</item>
        <item name="actionBarStyle">@style/Prevoz.ActionBar</item>
        <item name="sdlDialogStyle">@style/Prevoz.Dialog</item>
        <item name="android:textColorHighlight">@color/prevoztheme_pressed</item>
        <item name="android:textSelectHandleLeft">@drawable/prevoz_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/prevoz_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/prevoz_text_select_handle_middle</item>
    </style>

    <style name="Prevoz.ActionBar" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_solid_prevoz</item>
        <item name="background">@drawable/ab_solid_prevoz</item>
        <item name="android:titleTextStyle">@style/Prevoz.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/Prevoz.ActionBar.TitleText</item>
    </style>

    <style name="Prevoz.ActionBar.TitleText" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Prevoz.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/style_edittext</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Prevoz.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">#000000</item>
        <item name="android:button">@drawable/prevoz_checkbox</item>
    </style>

    <style name="Prevoz.AutoCompleteTextView" parent="@style/Prevoz.EditText">

    </style>

    <style name="Prevoz.FloatingHintEditText" parent="@style/Prevoz.EditText">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="Prevoz.Header" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/list_section_divider_holo_light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
    </style>

    <style name="Prevoz.Dialog" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="titleTextColor">@color/prevoztheme_color</item>
        <!-- anything can be left out: -->
        <item name="titleSeparatorColor">@color/prevoztheme_color</item>
        <item name="messageTextColor">@color/sdl_message_text_light</item>
        <item name="buttonTextColor">@color/sdl_button_text_light</item>
        <item name="buttonSeparatorColor">@color/sdl_button_separator_light</item>
        <item name="buttonBackgroundColorNormal">@color/sdl_button_normal_light</item>
        <item name="buttonBackgroundColorPressed">@color/prevoztheme_pressed</item>
        <item name="buttonBackgroundColorFocused">@color/prevoztheme_pressed</item>
        <item name="dialogBackground">@drawable/sdl_background_light</item>
    </style>

    <style name="Prevoz.Dialog.RideInfo" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>