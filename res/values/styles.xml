<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Standard styles -->
	<style
		name = "field_labels">
		<item name="android:textSize">@dimen/text_size_small</item>
		<item name="android:textStyle">bold</item>
	</style>



<!--  OLD STYLES -->
    <style
        name = "PrevozTheme"
        parent = "@android:style/Theme.Light.NoTitleBar">
    </style>

    <!-- Style for activities within tabs -->
    <style 
        name = "PrevozTabActivity"
        parent = "@android:style/Theme">
    </style>
    
    <!-- Style for background view setting correct background color -->
    <style
        name = "ViewStyle">
        <!-- <item name="android:background">@color/view_background</item> -->
    </style>

    <!-- Style for input boxes by default -->
    <style
      name = "PaddedBox">
      <item name="android:layout_marginLeft">8dip</item>
      <item name="android:layout_marginRight">8dip</item>
      <item name="android:layout_marginTop">2dip</item>
      <item name="android:layout_marginBottom">2dip</item>
      <item name="android:textColor">#000</item>  
    </style>
     

    <style 
        name = "LargeText"
        parent = "@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
        <item
            name="android:gravity">center_horizontal</item>  
    </style>

    <style 
        name = "MediumText"
        parent = "@android:style/TextAppearance.Medium">
        <item name="android:textColor">#626E79</item>  
        <item name="android:textStyle">bold</item>  
    </style>
    
    <style
        name = "SmallText"
        parent = "@android:style/TextAppearance.Small">
        <item 
            name="android:textSize">14dip</item>    
    </style>

    <!-- Separator style -->
    <style
        name = "Separator">
        <item name="android:layout_height">2dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_marginRight">3dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:background">@color/separator</item>    
    </style>

    <!--  Style keeping black background behind tabs -->
    <style
        name = "tabHostStyle">
        <item name="android:background">@android:color/black</item>            
    </style>
    
    <!-- Style for list headers -->
    <style
        name="ListHeaderStyle">
	    <item
	      name="android:layout_height">wrap_content</item>
	    <item
	      name="android:layout_width">fill_parent</item>
	    <item
	      name="android:paddingTop">2dip</item>
	    <item
	      name="android:paddingBottom">3dip</item>
	    <item
	      name="android:paddingLeft">5dip</item>
	    <item
	      name="android:background">@drawable/title_gradient</item>
	    <item
	      name="android:textAppearance">@android:style/TextAppearance.Small</item>
	    <item
	      name="android:shadowColor">#111111</item>
	    <item
	      name="android:shadowRadius">1</item>
	    <item
	      name="android:shadowDy">1</item>
	    <item
	      name="android:textStyle">bold</item>
	    <item
	      name="android:textColor">@android:color/white</item>
    </style>
    
    
    <!-- Colored titlebar -->
    <style name="title_text_style">
        <item
          name="android:shadowColor">#111111</item>
        <item
          name="android:shadowRadius">1</item>
        <item
          name="android:shadowDy">1</item>
    </style>
    
    <!-- Ride information styles -->
    <style name="RideInfoTitle" parent="@style/MediumText">
        <item
            name="android:gravity">center</item>    
    </style>
    
    <style name="RideInfoClock" parent="@android:style/TextAppearance.Large">
        <item
            name="android:gravity">center_horizontal</item>
        <item
            name="android:textSize">36dip</item>
    </style>
    
    <style name="RideInfoDay" parent="@style/SmallText">
        <item
            name="android:gravity">bottom</item>
    </style>

    <style name="RideInfoDate" parent="@style/SmallText">
        <item
            name="android:gravity">top</item>
    </style>
    
    <style name="PricePplText" parent="@android:style/TextAppearance.Large">
        <item
            name="android:gravity">center_horizontal</item>
        <item
            name="android:textSize">30dip</item>
        <item
            name="android:text">10.0</item>
    </style>
    
    <style name="PricePplTagText" parent="@style/SmallText">
        <item
            name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="DriverNameText">
        <item
            name="android:textStyle">bold|italic</item>
    </style>
    
    <style name="PhoneNumberText" parent="@android:style/TextAppearance.Medium">
    </style>
    
</resources>
