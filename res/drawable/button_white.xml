<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/title_gradient_start"
                android:endColor="@color/title_gradient_end"
                android:angle="90" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
	<item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/light_gradient_start"
                android:endColor="@color/light_gradient_end"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="@color/title_gradient_end" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/light_gradient_start"
                android:endColor="@color/light_gradient_end"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#AAA" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>