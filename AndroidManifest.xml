<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.prevoz.android"
      android:versionName="@string/app_version" android:versionCode="4">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name"
                  android:theme = "@style/PrevozTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    <activity android:name=".search.SearchActivity" android:theme="@style/PrevozTabActivity"></activity>
    <activity android:name=".rideinfo.RideInfoActivity" android:theme="@style/PrevozTheme"></activity>
    <activity android:name=".my_rides.MyRidesActivity" android:theme="@style/PrevozTabActivity"></activity>
    <activity android:name=".add_ride.AddRideActivity" android:theme="@style/PrevozTabActivity"></activity>
    <activity android:name=".auth.LoginActivity" android:theme="@style/PrevozTheme"></activity>
</application>

<uses-sdk android:targetSdkVersion="5" android:minSdkVersion="3"></uses-sdk>
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
</manifest> 