<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.prevoz.android"
      android:versionName="@string/app_version" 
      android:versionCode="14">
      
<uses-sdk android:targetSdkVersion="15" android:minSdkVersion="7" />
<permission android:name="org.prevoz.android.permission.C2D_MESSAGE" android:protectionLevel="signature" />
<!-- This app has permission to register and receive message -->
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

<!-- Required permissions for C2DM services -->
<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />    
<uses-permission android:name="org.prevoz.android.permission.C2D_MESSAGE" />
<uses-permission android:name="android.permission.GET_ACCOUNTS" />
<uses-permission android:name="android.permission.WAKE_LOCK" />

<uses-feature android:name="android.hardware.location" android:required="false" />

<application android:icon="@drawable/icon" android:label="@string/app_name" android:hardwareAccelerated="true">
    <!-- Activities -->
	<activity android:name="MainActivity" android:label="@string/app_name" android:theme = "@style/PrevozTheme">
		<intent-filter>
		    <action android:name="android.intent.action.MAIN" />
		    <category android:name="android.intent.category.LAUNCHER" />
		</intent-filter>
	</activity>
	<activity android:name=".CitySelectorActivity" android:theme="@style/PrevozTheme" android:windowSoftInputMode = "stateVisible|adjustResize" />
    <activity android:name=".rideinfo.RideInfoActivity" android:label="@string/app_name" android:theme="@style/PrevozTheme" />
    <activity android:name=".auth.LoginActivity" android:label="@string/title_login" android:theme="@style/PrevozTheme" />
    <activity android:name=".search.SearchResultsActivity" android:label="@string/title_search" android:theme = "@style/PrevozTheme" />
    <activity android:name=".add_ride.AddRideActivity" android:label="@string/title_addride" android:theme="@style/PrevozTheme" android:windowSoftInputMode="stateHidden" />
    <activity android:name=".my_rides.MyRidesActivity" android:label="@string/title_myrides" android:theme="@style/PrevozTheme"></activity>
    <activity android:name=".c2dm.NotificationsActivity" android:label="@string/title_notifications" android:theme="@style/PrevozTheme" />
    
    <service android:name=".GCMIntentService" />
    
    <!-- Intent receivers -->
    <receiver android:name="com.google.android.gcm.GCMBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND" >
	  <intent-filter>
	    <action android:name="com.google.android.c2dm.intent.RECEIVE" />
	    <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
	    <category android:name="org.prevoz.android" />
	  </intent-filter>
    </receiver>
</application>
</manifest> 