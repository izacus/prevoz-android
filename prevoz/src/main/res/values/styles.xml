<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Prevoz.Theme" parent="Prevoz.Theme.Base" />
    <style name="Prevoz.Theme.Base" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/prevoztheme_color</item>
        <item name="colorPrimaryDark">@color/prevoztheme_color_dark</item>
        <item name="colorAccent">@color/prevoztheme_color_dark</item>
        <item name="android:textColorHighlight">@color/prevoztheme_pressed</item>
        <item name="android:textSelectHandleLeft">@drawable/prevoz_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/prevoz_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/prevoz_text_select_handle_middle</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Prevoz.Theme.NewRide" parent="Prevoz.Theme.Base">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Prevoz.Theme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/prevoztheme_color</item>
        <item name="colorPrimaryDark">@color/prevoztheme_color_dark</item>
        <item name="colorAccent">@color/prevoztheme_color_dark</item>
    </style>

    <style name="Prevoz.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:colorControlHighlight">@color/prevoztheme_color</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Prevoz.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Prevoz.FloatingHintEditText" parent="@style/Prevoz.EditText">
        <item name="android:paddingTop">0dp</item>
        <item name="android:colorActivatedHighlight">@color/prevoztheme_color</item>
    </style>

    <style name="Prevoz.Header" parent="@android:style/Widget.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/prevoztheme_color_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
    </style>

    <style name="Prevoz.RideInfo" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/prevoztheme_color</item>
        <item name="colorPrimaryDark">@color/prevoztheme_color_dark</item>
        <item name="colorAccent">@color/prevoztheme_color_dark</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="Prevoz.Drawer.Item" parent="">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>