<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_result_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="horizontal"
    android:background="@color/background_color"
    android:foreground="?selectableItemBackground"
    android:minHeight="48dp"
    android:stateListAnimator="@animator/item_elevate"
    >

    <TextView
        android:id="@+id/item_result_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="34sp"
        android:textColor="#000000"
        android:gravity="center"
        android:includeFontPadding="false"
        android:fontFamily="sans-serif"
        tools:text="14:00"
        />

    <ImageView
        android:id="@+id/item_result_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginLeft="4dp"
        android:src="@drawable/ic_favorite"
        android:contentDescription="@string/cd_bookmark"
        android:visibility="invisible"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/item_result_price"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="bottom|right"
            android:textColor="@color/prevoztheme_color_dark"
            android:includeFontPadding="false"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            tools:text="8,9EUR"
            />

        <TextView
            android:id="@+id/item_result_driver"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="top|right"
            android:textColor="#8A000000"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="true"
            tools:text="Francelj"
            />

    </LinearLayout>
</LinearLayout>
